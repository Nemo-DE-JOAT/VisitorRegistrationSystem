<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddVisitServlet</servlet-name>
        <servlet-class>AddVisitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddVisitorServlet</servlet-name>
        <servlet-class>za.ac.tut.Servlet.AddVisitorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchVisitServlet</servlet-name>
        <servlet-class>za.ac.tut.Servlet.SearchVisitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveVisitServlet</servlet-name>
        <servlet-class>za.ac.tut.Servlet.RemoveVisitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetListServlet</servlet-name>
        <servlet-class>za.ac.tut.Servlet.GetListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetVisitListSizeServlet</servlet-name>
        <servlet-class>za.ac.tut.Servlet.GetVisitListSizeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddVisitServlet</servlet-name>
        <url-pattern>/AddVisitServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddVisitorServlet</servlet-name>
        <url-pattern>/AddVisitorServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchVisitServlet</servlet-name>
        <url-pattern>/SearchVisitServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveVisitServlet</servlet-name>
        <url-pattern>/RemoveVisitServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetListServlet</servlet-name>
        <url-pattern>/GetListServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetVisitListSizeServlet</servlet-name>
        <url-pattern>/GetVisitListSizeServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
